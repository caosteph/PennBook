<html>
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"> </script>
  <link rel="stylesheet" href="login.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="text/javascript">
        $(document).ready(function(){
            console.log("document ready");
            $("form").on("submit", function(event){
              event.preventDefault();
              var formData = {
                    username: $("#user").val(),
                    password: $("#password").val(),
                  };
                  $.post('/loginCheck', formData, function(data){
                    if (data.message == "Invalid Username or Password."){
                        alert(data.message);
                      } else {
                        window.location.href= "/home";
                      }
                      console.log(data);
                  }).fail(function() {
                      console.log(formData);
                      alert( "AJAX Call Failed" );
                  }).done(function() {
                      
                  });
    //           }
        });
    });

      </script>
</head>

<body>
    <div>
        <div style="float: left; width: 55%">
            <h2 class="login-3">Welcome</h2>
            <h2 class="login-2">to</h2>
            <h1 class="login-1">PennBook</h1>
        </div>
        <div style="float: left; width: 35%">
            <div class="login-box">
                <h4> Log In Now!</h4>
                <form id="loginForm">
                    <input type="text" id="user" size="20" class="form-control" placeholder="Username" value = "">
                    <input type="text" id="password" size="20" class="form-control" placeholder="Password" value = "">
                    <input type="submit" id="submit-button" value="Log In" class="btn button submit-button">
                    <br></br>
                    <a href="/register">Don't have an account? Sign up now!</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>